import serial
import time
arduinoData=serial.Serial('/dev/tty.usbserial-1410',9600)
time.sleep(1)
LC1 = 0
lst = []
start_time = time.time()
seconds = 7  


while (1==1):
    while (arduinoData.inWaiting()==0):
        pass
    while True:
            dataPacket=arduinoData.readline()
            dataPacket=str(dataPacket,'utf-8')
            splitPacket=dataPacket.split(',')
            LC1=str(splitPacket[0])
            X=str(splitPacket[1])
            # ledI=str(splitPacket[2])
            #Time Grace Period = 7 seconds
            current_time = time.time()
            elapsed_time = current_time - start_time
            lst.append(LC1)
            print(LC1, "   ", X) #'Led Brightness=',ledI   ##'X=',X
            #print(lst)


            if elapsed_time > seconds:
                maxval = max(lst)
                print("Trial ended with max force of: " + str(int(maxval))  + " Units")
                break
    
    
